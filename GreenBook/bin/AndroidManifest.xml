        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/greenbooklauncher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.stacksmashers.greenbook.SplashScreen" 
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        <activity
            android:name="com.stacksmashers.greenbook.MainActivity" 
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="com.stacksmashers.greenbook.RegisterActivity" >
            android:noHitory="true">
        </activity> 
        <activity
            android:name="com.stacksmashers.greenbook.LoginActivity" >
        </activity>
        <activity
            android:name="com.stacksmashers.greenbook.AccountsActivity" >
        </activity>
        <activity 
            android:name="com.stacksmashers.greenbook.SettingsActivity">
        </activity>
        <activity 
            android:name="com.stacksmashers.greenbook.VerifyEmail">
            </activity>
        
        
    </application>

</manifest>
