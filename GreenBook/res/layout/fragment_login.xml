<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#606060" >

    <EditText
        android:id="@+id/login_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="91dp"
        android:drawableBottom="#000000"
        android:ems="10"
        android:gravity="center"
        android:hint="Login Password"
        android:inputType="textPassword"
        android:text="s"
        android:textColor="#006600"
        android:textColorHint="#C0C0C0"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/login_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_password"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Login Email"
        android:inputType="textEmailAddress"
        android:text="stack@smashers.co"
        android:textColor="#009900"
        android:textColorHint="#C0C0C0"
        android:textColorLink="#009900"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/greenbook" />

</RelativeLayout>